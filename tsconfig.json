{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
  },
  "include": [
    "./test/*.ts",
    "./test/**/*.ts",
    "./types/**/*.ts",
    "./deploy",
    "./scripts",
    "./contracts"
  ],
  "files": [
    "./hardhat.config.ts",
  ],
}